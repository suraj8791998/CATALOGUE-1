pipeline{
    
    //agent defining
    agent { node { label 'roboshop_catalogue' } }

    stages{

        stage("INSTALLING DEPENDENCIES"){

            steps{
                
                //INSTALLING DEPENDENCIES
                sh 'npm install'
            }
        }

        stage("UNIT TESTING"){

            steps{

                //UNIT TEST WILL BE DONE HERE
                echo 'UNIT TEST WILL BE DONE HERE'
            }
        }

        stage("SONAR-SCANNER"){

            steps{

                //SONAR-SCANNER
                sh 'sonar-scanner'
            }
        }

        stage("BUILD"){

            steps{

                //GENERATING ZIP FILE HERE
                sh 'zip -r catalogue.zip ./* --exclude=.git --exclude=.zip'
                sh 'ls -ltr'
            }
        }

        stage("PUBLISH ARTIFACT"){
            
            steps{

                //PUSHING THE ZIP FILE INTO THE NEXUS 
                    nexusArtifactUploader(
                        nexusVersion: 'nexus3',
                        protocol: 'http',
                        nexusUrl: '54.145.77.177:8081',
                        groupId: 'com.roboshop',
                        version: '1.0.0.0',
                        repository: 'Catalogue',
                        credentialsId: 'nexus-auth',
                        artifacts: [
                            [artifactId: 'Roboshop',
                                classifier: '',
                                file: 'catalogue.zip',
                                type: 'jar']
                        ]
                    )
            }
        }


        stage("DEPLOY"){

            steps{

                //DEPLOYING TO SERVER
                echo "DEPLOY WILL BE DONE HERE"
            }
        }
    }

    // post{

    //     always{

    //         //CLEAN UP WORKSPACE
    //          deleteDir()
    //     }
    // }

}