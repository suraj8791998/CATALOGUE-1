pipeline{
    
    //agent defining
    agent { node { label 'roboshop_catalogue' } }

    stages{

        stage("INSTALLING DEPENDENCIES"){

            steps{
                
                //INSTALLING DEPENDENCIES
                sh 'npm install'
            }
        }

        stage("UNIT TESTING"){

            steps{

                //UNIT TEST WILL BE DONE HERE
                echo 'UNIT TEST WILL BE DONE HERE'
            }
        }

        stage("SONAR-SCANNER"){

            steps{

                //SONAR-SCANNER
                sh 'sonar-scanner'
            }
        }

        stage("BUILD"){

            steps{

                //GENERATING ZIP FILE HERE
                sh 'zip -r catalogue.zip ./* --exclude=.git --exclude=.zip'
                sh 'ls -ltr'
            }
        }

        stage("CLEANUP") {
            steps {
                // list files before cleanup
                sh 'echo "Files before cleanup:"'
                sh 'ls -la'

                // clean up workspace
                deleteDir()

                // list files after cleanup
                sh 'echo "Files after cleanup:"'
                sh 'ls -la'
            }
        }

        stage("DEPLOY"){

            steps{

                //DEPLOYING TO SERVER
                echo "DEPLOY WILL BE DONE HERE"
            }
        }
    }

}